{
  "id": null,
  "uid": null,
  "title": "Infrastructure Overview",
  "tags": ["platform", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "alertlist",
      "title": "System Alerts",
      "id": 1,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "options": { "showOptions": "current" }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "id": 2,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Used (bytes)",
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "App Metrics Up",
      "id": 4,
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "refId": "A",
          "expr": "up{job=\"app_metrics\"}",
          "legendFormat": "{{instance}}"
        }
      ]
    }
  ]
}