# Terraform variables via TF_VAR_* (recommended)
TF_VAR_cloud_provider=ovh
TF_VAR_project_name=techfactory
TF_VAR_environment=staging
TF_VAR_infrastructure_version=1.0.0

# OVH
TF_VAR_ovh_project_id=your_ovh_project_id_here
TF_VAR_region=GRA
TF_VAR_private_subnet_cidr=10.42.0.0/24
TF_VAR_vlan_id=42

# Common
TF_VAR_admin_email=admin@yourcompany.com
TF_VAR_domain_name=your-app.example.com
TF_VAR_ssh_allowed_cidr=203.0.113.10/32
TF_VAR_monitoring_allowed_cidr=10.0.0.0/8
TF_VAR_enable_monitoring=true

# AWS / Azure creds are NOT in this file. Use env vars / CI secrets.